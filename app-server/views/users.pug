extends layout

block content
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  
  div(style="margin: 30px; padding: 10px")

    table(class="w3-table-all")
        tr(class="resources_fields")
          th Fotografia
          th Nome
          th Estatuto
          th Filiação
          th Data de registo

        each u in users
          if !u.bloqueado
            tr
              td
                img.rounded-circle(src=u.foto ? u.foto : '/images/login_avatar.png' style="width: 50px; height: 50px")
              td
                a(href="/perfil/" + u._id) #{u.nome}
              td= u.estatuto.tipo
              td= u.estatuto.filiacao
              td= u.dataRegisto