                        a.m-r-15.text-inverse-lighter(href='javascript:;')
                          i.fa.fa-share.fa-fw.fa-lg.m-r-3
                          |  Share    
                    // end timeline-body
                  li
                    // begin timeline-icon
                    .timeline-icon
                      a(href='javascript:;') &nbsp;
                    .timeline-body
                      .timeline-header
                        span.username Registo na Plataforma
                      .timeline-content
                        span.date #{moment(user.dataRegisto).locale('pt').format("dddd, DD [de] MMMM [de] YYYY [às] HH:MM")}  

              // end #profile-post tab
            // end tab-content
          // end profile-content
  